<launch>
  <arg name="map_resolution" />
  <arg name="map_file" />
  <arg name="map_name" />

  <!-- node name="mongo" type="wrapper.py" pkg="mongodb" output="log">
    <param name="database_path" value="warehouse_data"/>
    <param name="warehouse_host" value="localhost"/>
  <param name="warehouse_port" value="27018"/> 
    <param name="overwrite" value="false"/>
  </node -->

<param name="warehouse_host" value="localhost"/>
  <param name="warehouse_port" value="27018"/> <!-- 27017 is default, use a private one to avoid error 48 conflicts -->
  <node pkg="warehouse_ros" type="mongo_wrapper_ros.py" name="mongo">
    <param name="db_path" value="warehouse_data"/>
    <param name="overwrite" value="false"/>
  </node>




  <node pkg="map_store_np" type="map_saver" name="map_saver" />
  <node pkg="map_store_np" type="map_manager" name="map_manager" output="screen">
     <!-- unused topics -->
     <remap from="dynamic_map" to="map_store_dynamic_map"/>
     <remap from="map" to="map_store_map"/>
  </node> 

  
  <!-- node name="map_server" pkg="map_server" type="map_server" args="'$(arg map_file)' '$(arg map_resolution)'">
     
     <remap from="/static_map" to="/dynamic_map" />
     <remap from="/map" to="/map_unused" />
  </node -->

  <node pkg="map_store_np" type="add_map.py" name="add_map" args="'$(arg map_name)'" required="true">
  <param name="warehouse_host" value="localhost"/>
  <param name="warehouse_port" value="27018"/> <!-- 27017 is default, use a private one to avoid error 48 conflicts -->
  </node>
</launch>

